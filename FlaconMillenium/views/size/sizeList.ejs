<!DOCTYPE html>
<html>
  <head>
    <title>Size</title>
    <link href="/css/flaconMilleniumDefault.css" rel="stylesheet" type="text/css">
    <link href="/css/menu.css" rel="stylesheet" type="text/css">
    <link href="/css/popup.css" rel="stylesheet" type="text/css">
    <link href="/css/list.css" rel="stylesheet" type="text/css">

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script defer  type="text/javascript" src="/js/defaultFonctions.js"></script>
    <script type="text/javascript" src="/js/sizeFonctions.js"></script>
  </head>

  <body>
    <%- include('../menu.ejs') %>
    <div id="content">
      <h1>Size</h1>

      <!-- Message display area -->
      <div>
        <table>
          <div id="editorSizeForm"></div>
          <tr>
            <td>name</td>
            <td>size</td>
            <td>description</td>
          </tr>
          <% for(var i=0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].name %></td>
              <td><%= data[i].size %></td>
              <td><%= data[i].description %></td>
              <td><a href="/size/unit?id=<%= data[i].id %>">Detail</a></td> 
              <td><button type="button" class="open-button" onclick="createSizeForm('patchSizeById', '/size/unit', '<%= data[i].id %>', '<%= data[i].name %>', '<%= data[i].size %>', '<%= data[i].description %>')">Edit</button></td> 
              <td><button type="button" onclick="deleteById('/size/unit','<%= data[i].id %>')">Delete</button></td> 
            </tr>
          <% } %>
        </table>
        <button type="button" class="open-button" onclick="createSizeForm('postSizeById', '/size/unit')">Add a size</button>
      </div>
    </div>
  </body>
</html>
